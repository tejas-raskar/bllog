generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  username String @unique
  password String
  name String?
  blogs Blog[]
}

model Blog {
  id String @id @default(uuid())
  title String?
  content String?
  blog Json
  published Boolean @default(false)
  authorId String
  author User @relation(fields: [authorId], references: [id])
}